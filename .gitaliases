; ~/.gitaliases - Useful Git aliases

[alias]
	# Shortcuts
	cl = clone
	pu = push
	pf = push --force
	ci = commit
	co = checkout
	cob = checkout -b
	df = diff
	dc = diff --cached
	st = status
	br = branch
	re = rebase
	sh = stash
	rs = reset
	un = reset HEAD
	fe = fetch
	pl = pull

	# File aliases
	unstage = reset HEAD
	diffc = diff --cached

	# Rebase
	ir = "!git rebase -i `git merge-base master HEAD`"

	# Code review
	pr = difftool origin/master...

	# Log aliases
	log1 = log -p1

	# Upstream aliases
	up = remote add upstream
	uf = fetch upstream
	ur = rebase upstream/master


; vim:set ft=gitconfig:
