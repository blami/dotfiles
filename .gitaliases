; ~/.gitaliases - Useful Git aliases

[alias]
	; Basics
	cl = clone
	co = checkout
	cob = checkout -b
	ci = commit
	cis = commit -s
	si = commit --amend --noedit --signoff
	un = reset HEAD
	unstage = reset HEAD
	pu = push
	puf = push --force
	pl = pull
	fe = fetch

	; Status
	st = status

	; Log
	d = describe
	log1 = log -p1
	logf = log --all --follow
	; Scott Chacon's Git Wrangling
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = lola = log --graph --decorate --pretty=oneline --abbrev-commit --all

	; Diff
	df = diff
	dc = diff --cached
	diffc = diff --cached
	coderev = difftool origin/master...

	; Branches and tags
	br = branch
	brclean = "!git branch --merged | grep -v \"\\*\" | grep -v master | grep -v dev | xargs -n 1 git branch -d"

	; Rebase
	re = rebase
	rei = "!git rebase -i `git merge-base master HEAD`"

	; Upstream
	up = remote add upstream
	uf = fetch upstream
	ur = rebase upstream/master


; vim:set ft=gitconfig:
