# ~/.LESS_COLORS: colors for less pager
# NOTE: This is not read automatically, needs to be sourced by shell.

LESS_TERMCAP_mb=$'\E[01;34m'            # begin blink mode
LESS_TERMCAP_md=$'\E[01;34m'            # begin bold mode
LESS_TERMCAP_me=$'\E[0m'                # end blink/bold mode
LESS_TERMCAP_us=$'\E[01;04;32m'         # begin underlined mode
LESS_TERMCAP_ue=$'\E[0m'                # end underlined mode
LESS_TERMCAP_so=$'\E[01;44;37m'         # begin standout mode
LESS_TERMCAP_se=$'\E[0m'                # end standout mode

export LESS_TERMCAP_mb LESS_TERMCAP_md LESS_TERMCAP_me LESS_TERMCAP_se \
	LESS_TERMCAP_so LESS_TERMCAP_ue LESS_TERMCAP_us


# vim:set ft=sh:
