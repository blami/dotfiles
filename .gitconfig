; ~/.gitconfig - Git configuration

[user]
	name = Ondrej Balaz
	email = blami@blami.net
	signingkey = 1FCD8C25

[core]
	# Use neovim directly (hybrid configuration for Unix/Cygwin)
	editor = nvim
	excludesfile = /home/blami/.gitignore_global

[color]
	filemode = false
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
	pager = true

[merge]
	tool = vimdiff

[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c '$wincmd J'

[push]
	; Push branches manually one by one
	default = simple

[rebase]
	autosquash = true

[include]
	path = ~/.gitaliases
	# Include local configuration file
	# NOTE ~/.gitconfig_local contains mainly includeIf statemens pointing to
	# per-directory configuration:
	# [includeIf "gitdir:~/ws/work/"]
	#     path = ~/.gitconfig_work
	path = ~/.gitconfig_local

[sendemail]
	from = Ondrej Balaz <blami@blami.net>


