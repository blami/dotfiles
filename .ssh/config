# ~/.ssh/config: SSH client configuration

# {{{ Snippets
# Host
# ----
#Host <alias>
#    Hostname host1
#    Port 2222
#
# Proxy
# -----
# See: https://en.wikibooks.org/wiki/OpenSSH/Cookbook/Proxies_and_Jump_Hosts
#ProxyCommand            ~/bin/proxycmd %h %p
#ProxyCommand            ssh -q -W %h:%p gateway
#ProxyJump               user1@host1:22,user2@host2:2222,...
# }}}


# Include per-host configuration
Include ~/.ssh/config_hosts


# {{{ Global
Host *
    HashKnownHosts      yes
    Protocol            2
    TcpKeepAlive        yes
    ServerAliveCountMax 3
    ServerAliveInterval 120
    Compression         yes
    # Environment
    SendEnv             LANG LC_*
    # Connection sharing
    # NOTE Don't use ':' as WSL has bug (build 1803)
    ControlMaster       auto
    ControlPath         ~/.ssh/ctrl/%r@%h_%p
    # Visual key
    VisualHostKey       yes
# }}}


# vim:set ft=sshconfig:
