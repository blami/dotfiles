# ~/.mutt/macros: Keyboard macros and bindings

# NOTE: In order to make life with GMail's web interface easier I remapped
# mutt to same keys as used in advanced GMail bindings (Lab).

# {{{ Index
bind index,pager    <down>  next-entry
bind index,pager    <up>    previous-entry
# }}}

# {{{ Message/Thread
macro index,pager   c       "<enter-command>unset sig_on_top<enter><mail>"          "compose"
macro index,pager   b       "<enter-command>unset sig_on_top<enter><bounce-message>" "re-send"
macro index,pager   r       "<enter-command>unset sig_on_top<enter><reply>"         "reply"
macro index,pager   a       "<enter-command>unset sig_on_top<enter><group-reply>"   "reply to all"
macro index,pager   f       "<enter-command>set sig_on_top<enter><forward-message>" "forward"
bind index,pager    s       flag-message
bind index,pager    d       noop
bind index,pager    \#      delete-message
bind index,pager    u       noop
bind index,pager    z\#     undelete-message
#macro index         v       "<save-message>?<toggle-mailboxes>"                     "Move message"          # GMail label
macro index,pager   l       "<save-message>?<toggle-mailboxes>"                     "move message"          # GMail move
macro index,pager   I       "<clear-flag>N"                                         "mark as read"
macro index,pager   U       "<set-flag>N"                                           "mark as unread"

# }}}

# {{{ Search/Limit
bind index          /       limit
# }}}

# {{{ Selection
bind index          x       tag-thread
bind index          **      tag-pattern
macro index         *a      "<untag-pattern>~A<return><tag-pattern>~A<return>"      "select all"
macro index         *n      "<untag-pattern>~A<return>"                             "de-select all"
macro index         *r      "<untag-pattern>~A<return><tag-pattern>!~U<return>"     "select all read"
macro index         *u      "<untag-pattern>~A<return><tag-pattern>~U<return>"      "select all unread"
macro index         *s      "<untag-pattern>~A<return><tag-pattern>~T<return>"      "select all flagged"
macro index         *t      "<untag-pattern>~A<return><tag-pattern>!~T<return>"     "select all unflagged"
# }}}




# {{{ Mailboxes
macro index,pager   g       noop
macro index,pager   gl      <change-folder>?<toggle-mailboxes>                      "change mailbox"
# TODO generate macros for gi, etc. in profile sourcer?
# }}}



# vim:set ft=muttrc:
